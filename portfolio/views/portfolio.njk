{% extends "layout.njk" %}

{% block head %}

  <title>Portfolio | Edicarla Silva</title>

{% endblock %}

{% block content %}
  <section class="content">
    <h1>Aulas</h1>
  </section>
  <section class="content">
    <div class="cards">

      {% for item in items %}
        <div class="card" id="{{item.id}}">
          <div class="card-image {{'featured-wrapper' if item.featured}}">
            <img src="https://img.youtube.com/vi/{{item.id}}/maxresdefault.jpg" alt="Imagem de {{item.title}}">

            {% if item.featured %}
              <div class="featured">Featured</div>
            {% endif %}

          </div>
          <div class="card-body">
            <div class="card-content">
              <p>{{item.title}}</p>
            </div>
            <div class="card-info">
              <p>{{item.duration}}</p>
              <p class="price">{{item.price}}</p>
            </div>
          </div>
        </div>
      {% endfor %}
    </div>
  </section>

  <script src="/js/scripts.js"></script>

{% endblock %}